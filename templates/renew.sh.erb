#!/usr/bin/env bash

set -eou pipefail


if [[ "${1:-}" == "force" ]] ; then
  force="--days 100"
else
  force="--dynamic"
fi

export AWS_SHARED_CREDENTIALS_FILE="<%= @creds_file %>"

/usr/bin/lego \
  "--path=<%= @path %>" \
  --dns=route53 \
  "--domains=<%= @hostname %>" \
  --accept-tos \
  "--email=<%= @email %>" \
  "--key-type=<%= @key_type %>" \
  renew \
  --no-random-sleep \
  "--profile=<%= @profile %>" \
  "--renew-hook=<%= @hook_file %>" \
  "$force"

